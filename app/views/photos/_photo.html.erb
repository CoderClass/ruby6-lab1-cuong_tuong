
<div class="card" style="width: 20rem;">
  <div class="card-header clearfix">
    <div class="avatar">
      <%= image_tag photo.image %>
    </div>
    <%= photo.username %>
  </div>
  <img class="card-img-top" src="<%= photo.url %>" alt="Card image cap">
  <div class="card-block">
    <h4 class="card-title"><%= photo.username %></h4>
    <p class="card-text"><%= photo.caption %></p>
    <p class="card-text"><%= photo.likes_count %> likes</p>
    <a href="<%= edit_photo_path(photo)%>" class="btn btn-primary">Edit Avatar</a>
  </div>  
  <% if photo.comments.count > 0 %>
    <div class="card-footer">
      <%= render photo.comments %>
    </div>
  <% end %>
  
</div>